extends layout
 
block content
  h1= title
  - let item = results
  div(class="container-fluid")
    div(class="row m-1")
      each item in results
        - let destination1 = `dispatch("/tiger/update?id=${item._id}")`
        - let destination2 = `dispatch("/tiger/create")`
        - let destination3 = `dispatch("/tiger/detail?id=${item._id}")`
        - let destination4 = `dispatch("/tiger/delete?id=${item._id}")`
        div(class="row-sm-2 m-1") 
          | tiger color: #{item.tiger_color}, 
          | tiger breed: #{item.tiger_breed}, 
          | tiger price: #{item.tiger_price}
          //- button.btn(class="btn-primary ml-1", onclick= destination2) Create 
        button.btn(class="btn-primary ml-1", onclick= destination1) Update 
          //- button.btn(class="btn-primary ml-1", onclick= destination3) Detail
          //- button.btn(class="btn-primary ml-1", onclick= destination4) Delete
 
  script.
    function dispatch(path) {
      window.location.href = path;
    }